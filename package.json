  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.6.2",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
